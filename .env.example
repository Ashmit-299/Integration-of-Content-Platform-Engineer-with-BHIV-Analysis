# BHIV Platform Configuration
# Copy this file to .env and update with your values

# BHIV Core Configuration
BHIV_BUCKET_PATH=bucket
BHIV_LM_URL=https://api.openai.com/v1
BHIV_LM_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./data/meta.db

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
ADMIN_PASSWORD=secure-admin-password

# Optional: AWS S3 Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Optional: External Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/bhiv_platform

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=txt,md

# CORS Settings (for production)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600